<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brave_bunny.dndhelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".create.CreateActivity"
            android:label="@string/create_character">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.brave_bunny.dndhelper.MainActivity" />
        </activity>
        <activity
            android:name=".select.SelectActivity"
            android:label="@string/select_character">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.brave_bunny.dndhelper.MainActivity" />
        </activity>
        <activity android:name=".play.DetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.brave_bunny.dndhelper.select.SelectActivity" />
        </activity>
        <activity android:name=".create.AbilityActivity" />
        <activity
            android:name=".create.SkillsActivity"
            android:label="Skiills">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.brave_bunny.dndhelper.MainActivity" />
        </activity>
    </application>

</manifest>